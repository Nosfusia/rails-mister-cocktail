<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= select_tag "dose[ingredient_id]", options_from_collection_for_select(
          Ingredient.all,
          :id, :name),
          class: 'select2' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end  %>
</div>
