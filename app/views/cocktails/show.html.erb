<%= link_to 'Back' , cocktails_path %>


<div class="container">
  <h1 class="text-center"><%=@cocktail.name%></h1>
</div>

<div class="container">
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> de <%= dose.ingredient.name %>
        <%= link_to 'Delete', dose_path(dose), method: :delete %>
      </li>
    <% end  %>
  </ul>
  <%= link_to 'Add a dose' , new_cocktail_dose_path(@cocktail) %>
</div>

